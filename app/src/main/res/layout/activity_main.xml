<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/gradient_bg"
    tools:context="com.example.alaaelias.portfolio.MainActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp">

        <TableLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingBottom="50dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="51dp"
                android:gravity="center"
                android:text="@string/buttons_title"
                android:textColor="#2E3D49"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_popular_movies"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="17dp"
                android:width="200dp"
                android:background="@drawable/button_style"
                android:text="@string/popular_movies"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_stock_hawak"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="17dp"
                android:width="200dp"
                android:background="@drawable/button_style"
                android:text="@string/stock_hawk"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_build_it_bigger"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="17dp"
                android:width="200dp"
                android:background="@drawable/button_style"
                android:text="@string/build_it_bigger"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_make_your_app_material"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="17dp"
                android:width="200dp"
                android:background="@drawable/button_style"
                android:text="@string/make_your_app_material"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_go_ubiquitous"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="17dp"
                android:width="200dp"
                android:background="@drawable/button_style"
                android:text="@string/go_ubiquitous"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_capstone"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="17dp"
                android:width="200dp"
                android:background="@drawable/button_style"
                android:text="@string/capstone"
                android:textColor="#FFF" />

        </TableLayout>
    </ScrollView>
</LinearLayout>
